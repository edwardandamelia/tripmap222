<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".conts.UserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:id="@+id/menustr"
        >

        <ImageView
            android:id="@+id/bcbt"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="17dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/bcbt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="User Page"
            android:textColor="#111111"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/menustr"
        android:background="#f2f2f2"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menustr"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="451dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="0dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="12dp"
                android:id="@+id/contsly"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/conts20_bt"
                        android:layout_width="3dp"
                        android:layout_height="15dp"
                        android:focusable="false"
                        android:layout_gravity="right"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="14dp"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/conts20_bt"
                        />

                    <ImageView
                        android:layout_width="192dp"
                        android:layout_height="168dp"
                        android:id="@+id/imgsrc"
                        android:focusable="false"
                        android:layout_marginTop="9dp"
                        android:focusableInTouchMode="false"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:id="@+id/user_str"
                        android:text=""
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/btbg26"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="12dp"
                        android:id="@+id/flbt"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Follow"
                            android:textSize="12sp"
                            android:id="@+id/flbt_str"
                            android:textColor="#7581F5"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D9D9D9"
                        android:layout_marginTop="14dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="73dp"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:id="@+id/fl_n"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Following"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                />

                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#D9D9D9"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:id="@+id/fl_n2"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Followers"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                />

                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D9D9D9"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:id="@+id/sendstr_bt"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:text="Messages"
                                android:textColor="#7581F5" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/conts2ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contsly"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="17dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="0dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/conts_menu"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    app:tabGravity="center"
                    app:tabIndicatorColor="#7581F5"
                    app:tabSelectedTextColor="#7581F5"
                    app:tabTextAppearance="@style/TapMenu2" />

            </androidx.cardview.widget.CardView>


            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:id="@+id/conts_pager"
                android:layout_below="@+id/conts2ly"
                android:overScrollMode="never"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>