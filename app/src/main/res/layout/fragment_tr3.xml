<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f2f2f2"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#111111"
            android:text=""
            android:id="@+id/trstr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:id="@+id/ctestr"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@drawable/btcte22" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/imagepagerbox"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/trstr"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@android:color/transparent"
            android:id="@+id/imgbt_ly"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/trstr"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="32dp"
                    android:src="@drawable/imgbt2"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_alignParentRight="true"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="32dp"
                    android:src="@drawable/imgbt20"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

        </RelativeLayout>



        <com.google.android.material.tabs.TabLayout
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagepagerbox"
            app:tabBackground="@drawable/tab_selector2"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/indicator"
            android:layout_marginBottom="60dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tr_conts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="50dp"
                    android:gravity="center_horizontal"
                    android:textColor="#111111"
                    android:textSize="15sp" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f2f2f2"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/btplus"
                        android:layout_width="20dp"
                        android:layout_height="32dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/btconts" />

                    <TextView
                        android:id="@+id/plustbt_str"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/btplus"
                        android:text="0" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/strbt"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/btconts2"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/cte_ch_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/btconts3"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/btconts5"
                        android:id="@+id/chk_conts_bt"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>