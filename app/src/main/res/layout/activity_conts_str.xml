<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".conts.Conts_Str_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ctestrly"
        android:background="#FFFFFF"
        >

        <TextView
            android:id="@+id/ctestr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_centerVertical="true"
            android:text="Comments"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/closebt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:text="Close"
            android:textColor="#000000"
            android:textSize="14sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ctestrly"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        />


    <LinearLayout
        android:id="@+id/contsly"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <androidx.emoji.widget.EmojiEditText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/str"
            android:background="@drawable/btbg22"
            android:hint="Write a comment..."
            android:paddingLeft="10dp" />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/str_bt"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/conts_bt20" />
    </LinearLayout>

</RelativeLayout>