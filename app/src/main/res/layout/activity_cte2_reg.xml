<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".conts.Cte2RegActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:id="@+id/strly"
        >

        <ImageView
            android:id="@+id/b_bt"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/bcbt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="Post Panoramic"
            android:textColor="#111111"
            android:textSize="17sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f2f2f2"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/strly"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F0F0F0"
                />

            <RelativeLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Choose File"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/imgbt"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="32dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/btbg27"
                    android:src="@drawable/bt_img" />

                <ImageView
                    android:id="@+id/imgsrc"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="32dp"
                    android:layout_toRightOf="@+id/imgbt" />

                <ImageView
                    android:id="@+id/dl_bt"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/imgsrc"
                    android:visibility="invisible"
                    android:src="@drawable/dlbt" />

                <ImageView
                    android:id="@+id/imgsrc2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="32dp"
                    android:layout_toRightOf="@+id/imgsrc" />

                <ImageView
                    android:id="@+id/dl_bt2"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/imgsrc2"
                    android:visibility="invisible"
                    android:src="@drawable/dlbt" />

                <ImageView
                    android:id="@+id/imgsrc3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="32dp"
                    android:layout_toRightOf="@+id/imgsrc2"

                    />

                <ImageView
                    android:id="@+id/dl_bt3"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/imgsrc3"
                    android:visibility="invisible"
                    android:src="@drawable/dlbt" />

                <ImageView
                    android:id="@+id/imgsrc4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/imgbt"
                    android:layout_below="@+id/imgsrc"

                    />

                <ImageView
                    android:id="@+id/dl_bt4"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/imgsrc4"
                    android:layout_below="@+id/imgsrc"
                    android:visibility="gone"
                    android:src="@drawable/dlbt" />

                <ImageView
                    android:id="@+id/imgsrc5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/imgsrc4"
                    android:layout_below="@+id/imgsrc"
                    />

                <ImageView
                    android:id="@+id/dl_bt5"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/imgsrc5"
                    android:layout_below="@+id/imgsrc"
                    android:visibility="gone"
                    android:src="@drawable/dlbt" />

            </RelativeLayout>



            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btbg22"
                >


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/str"
                    android:hint="Travel Title"
                    android:background="@android:color/transparent"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/select_locationbt"
                android:background="@drawable/btbg22"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destination Country"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:hint="Select"
                    android:id="@+id/place_str"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:background="@android:color/transparent"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/select_locationbt2"
                android:background="@drawable/btbg22"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Near City (Optional)"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:hint="Select"
                    android:gravity="center"
                    android:id="@+id/place_str2"
                    android:textSize="18sp"
                    android:background="@android:color/transparent"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travel Review"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    />

            </LinearLayout>




            <EditText
                android:id="@+id/str2"
                android:layout_gravity="center_horizontal"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:layout_height="220dp"
                android:layout_width="330dp"
                android:layout_marginBottom="20dp"
                android:lines="30"
                android:hint=""
                android:background="@drawable/btbg22"
                android:scrollHorizontally="false"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imgsrc20"
                android:layout_marginBottom="40dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/regbt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#ffac33"
            android:text="POST"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>