<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#f2f2f2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f2f2f2"
        >

        <ImageView
            android:id="@+id/bcbt"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="17dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/bcbt" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            android:textColor="#111111"
            android:gravity="center_horizontal"
            android:text="Detail"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f2f2f2"
        />
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#e4463d"
            android:id="@+id/tr_bt"
            android:text="회원정보"
            />
        <View
            android:layout_width="64dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tr_bt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:background="#e4463d"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toRightOf="@id/tr_bt"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:id="@+id/trplace_bt"
            android:textColor="#A5A5A5"
            android:text="여행정보"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f2f2f2"
        />


    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"
            android:elevation="0dp"
            app:cardCornerRadius="25dp"
            android:id="@+id/imgly"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imgsrc"
                android:background="@drawable/img_round"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#111111"
            android:layout_toRightOf="@+id/imgly"
            android:id="@+id/sname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sid"
            android:layout_toRightOf="@+id/sname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_below="@+id/sname"
            android:textColor="#111111"
            android:layout_toRightOf="@+id/imgly"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:id="@+id/contstextbox"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/strsbox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/strbox"
                android:lineSpacingExtra="5sp"
                android:hint="메시지 남기기"
                />
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btsend"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/send_bt"

                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>