<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/mainly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_ly"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/imgsrc"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/userimg" />



                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@+id/img_ly"
                    android:orientation="vertical">


                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/userstr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/mapbt"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/mapicon" />

                            <TextView
                                android:id="@+id/area_str"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/regstr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#909090"
                            android:textSize="12sp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btcte222"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/btcte22" />

                    <LinearLayout
                        android:id="@+id/flbt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/flbt_img"
                            android:layout_width="40dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="22dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:src="@drawable/contsbt20" />

                        <ImageView
                            android:id="@+id/flbt_img2"
                            android:layout_width="52dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="22dp"
                            android:src="@drawable/contsbt20_2"
                            android:visibility="gone" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:id="@+id/contsbt20"
                        android:layout_marginTop="22dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/contsbt22" />
                </LinearLayout>

            </RelativeLayout>

            <include layout="@layout/img_conts5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/conts_str"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="5"
                    android:maxLines="5"
                    android:scrollHorizontally="true"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/conts_str2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"

                    android:gravity="top"
                    android:inputType="text|textMultiLine|textNoSuggestions"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:visibility="gone" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/plustbt_str"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Likes"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:id="@+id/chkplusbt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgsrc2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="17dp" />

                        <ImageView
                            android:id="@+id/imgsrc3"
                            android:layout_width="15dp"
                            android:layout_height="15dp" />

                        <ImageView
                            android:id="@+id/imgsrc5"
                            android:layout_width="15dp"
                            android:layout_height="15dp" />

                        <ImageView
                            android:id="@+id/morebt"
                            android:layout_width="12dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="7dp"
                            android:src="@drawable/contsimg22" />

                    </LinearLayout>




                </LinearLayout>

                <LinearLayout

                    android:id="@+id/btcte20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bt_bg"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hang out"
                        android:textSize="12sp"
                        android:textColor="#2DA9CA"
                        />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D9D9D9"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="17dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:id="@+id/btplus"
                        android:layout_width="20dp"
                        android:layout_height="32dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/btconts" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/strbt"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/btconts2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/cte_ch_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/btconts3" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/chk_conts_bt"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/btconts5" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/str_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="#E9EFFB">

                <ImageView
                    android:id="@+id/str_imgsrc"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/userimg" />

                <TextView
                    android:id="@+id/str_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/str_imgsrc"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <androidx.emoji.widget.EmojiTextView
                    android:id="@+id/str_str"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/str_username"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/str_imgsrc"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>